rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users collection
    match /users/{userId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Scrobbles collection
    match /scrobbles/{scrobbleId} {
      allow read: if true;
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null && 
        (resource.data.odl == request.auth.token.sub || 
         resource.data.userId == request.auth.token.sub);
    }
    
    // Followers collection
    match /followers/{followId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Chats collection
    match /chats/{chatId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Suggestions collection
    match /suggestions/{suggestionId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}
